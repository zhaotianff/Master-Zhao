      xmlns:local="clr-namespace:Master_Zhao.Shell.View.Utility.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkTimeCountSetting">

    <Grid>
        <Grid.RowDefinitions>
